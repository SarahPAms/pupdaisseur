<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.breed%></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for orderitem, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency orderitem.price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: orderitem.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency orderitem.order_price %></span></h4>
      <% end %>
    </div>

  </div>
</div>
