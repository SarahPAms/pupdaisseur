<h1 class="text-center"><%= @product.breed %></h1>

  <% @product.photos.each do |photo| %>
    <%= image_tag photo.image %>
  <%end%>

  <p>Breed: <%= @product.breed %></p>
  <p>Origin: <%= @product.origin %></p>
  <p>Coat: <%= @product.coat %></p>
  <p>Description: <%= @product.description %></p>

  <%= form_for @orderitem, remote: true do |f| %>
     <h4 class="text-right">Unit Price: <span style="color: blue"><%= number_to_currency @product.price %></span></h4>
       <div class="input-group">
         <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
         <div class="input-group-btn">
           <%= f.hidden_field :product_id, value: @product.id %>
           <%= f.submit "Add to Cart", class: "btn btn-primary" %>
         </div>
       </div>
     <% end %>
